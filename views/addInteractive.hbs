<form action="/Interactives/add" method="POST">
   <div class="input-field">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Название книги</label>
      <span class="helper-text" data-error="Введите название книги"></span>
   </div>
    <div class="input-field col s12">
          <textarea id="textarea" class="materialize-textarea" name="content"></textarea>
          <label for="textarea">Содержание</label>
        </div>
    <div class="input-field">
      <input id="variant1" name="variant1" type="text" class="validate">
      <label for="variant1">1 вариант ответа</label>
   </div>
   <div class="input-field">
      <input id="variant2" name="variant2" type="text" class="validate">
      <label for="variant2">2 вариант ответа</label>
   </div>

    <input type="hidden" name="authorId" value="{{userId}}">
   <input type="hidden" name="_csrf" value="{{csurf}}">

   <button type="submit" class="btn">Создать интерактивную книигу</button>
</form>