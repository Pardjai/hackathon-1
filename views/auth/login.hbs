<div class="auth">
   <div class="row">
      <div class="col s12">
         <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Вход</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>
         </ul>
      </div>
      {{#if error}}
         <p class="alert">{{error}}</p>
      {{/if}}
      {{!-- форма входа --}}
      <div id="login" class="col s6 offset-s3">
         <form action="/auth/login" method="POST">
            <div class="input-field">
               <input id="l-email" name="email" type="email" class="validate" required value="{{loginData.email}}">
               <label for="l-email">Email</label>
               <span class="helper-text" data-error="Введите email"></span>
            </div>

            <div class="input-field">
               <input id="l-password" name="password" type="password" class="validate" required>
               <label for="l-password">Пароль</label>
               <span class="helper-text" data-error="Введите пароль"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csurf}}">

            <button type="submit" class="btn">Войти</button>

            <p><a href="/auth/reset">Забыли пароль</a></p>
         </form>
      </div>
        {{!-- форма  регистрации --}}
      <div id="register" class="col s6 offset-s3">
         <form action="/auth/register" method="POST">
            <div class="input-field">
               <input id="name" name="name" type="text" class="validate" required value="{{registerData.name}}">
               <label for="name">Ваше имя</label>
               <span class="helper-text" data-error="Введите имя"></span>
            </div>

            <div class="input-field">
               <input id="email" name="email" type="email" class="validate" required value="{{registerData.email}}">
               <label for="email">Email</label>
               <span class="helper-text" data-error="Введите email"></span>
            </div>

            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
               <label for="password">Пароль</label>
               <span class="helper-text" data-error="Введите пароль"></span>           
            </div>

            <div class="input-field">
               <input id="confirm" name="confirm" type="password" class="validate" required>
               <label for="confirm">Повторите пароль</label>
               <span class="helper-text" data-error="Повторите пароль"></span>
            </div>

            <p class="alert" id="alertConfirmPassword" hidden>Пароли не совпадают</p>

            <input type="hidden" name="_csrf" value="{{csurf}}">

            <button type="submit" class="btn" data-role="submitConfirmingForm" disabled>Зарегистрироваться</button>
         </form>
      </div>
   </div>
</div>
