<div class="row">

   <div class="col s6 offset-s3">

      <h1>Задать пароль</h1>
      <form id="new-password" action="/auth/password" method="POST">
         <div class="input-field">
            <input id="password" name="password" type="password" class="validate" required>
            <label for="password">Пароль</label>
            <button type="button" class="btn btn-show-pass"><i class="fa fa-eye" aria-hidden="true"></i></button>
            <span class="helper-text" data-error="Введите пароль"></span>
         </div>
         <div class="input-field">
            <input id="confirm" name="confirm" type="password" class="validate" required>
            <label for="confirm">Повторите пароль</label>
            <button type="button" class="btn btn-show-pass"><i class="fa fa-eye" aria-hidden="true"></i></button>
            <span class="helper-text" data-error="Повторите пароль"></span>
            <p class="alert" id="alertConfirmPassword" hidden>Пароли не совпадают</p>
         </div>
         <input type="hidden" name="_csrf" value="{{csurf}}">
         <input type="hidden" name="userId" value="{{userId}}">
         <input type="hidden" name="token" value="{{token}}">

         <button type="submit" class="btn" data-role="submitConfirmingForm" disabled>Обновить пароль</button>
      </form>
   </div>

</div>