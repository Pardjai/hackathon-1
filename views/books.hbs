<h1 class="offset-s1">Книги</h1>

<form action="/books/search" method="POST">
   <div class="input-field">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Название книги</label>
      <span class="helper-text" data-error="Введите название книги"></span>
   </div>
   <input type="hidden" name="_csrf" value="{{csurf}}">
   <button type="submit" class="btn">Найти</button>
</form>

<div id="books">
   {{#if books.length}}
   {{#each books}}
   <div class="row">
      <div class="card-container">
         <div class="card">
            <div class="card-content">
               <h2 class="card-title">{{title}}</h2>
               <span class="author">{{author}}</span>
            </div>
            <div class="card-action actions-btn">
               <a href="/books/{{_id}}" target="_blank">Открыть</a>
            </div>
         </div>
      </div>
   </div>
   {{/each}}
   {{else}}
   <p>Книг пока нет</p>
   {{/if}}
</div>